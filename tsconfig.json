{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "strict": true,
    "declaration": false,
    "outDir": "./www",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./public/**/*", "./www/**/*", "node_modules"]
}
